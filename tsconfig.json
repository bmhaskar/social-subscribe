{
    "compilerOptions": {
        "target": "es6",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "sourceMap": true

    },
    "compileOnSave": false,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*-spec.ts"
    ]
}
